                document.getElementById('regularPrice').value = '';
            } else if (regularPrice > salesPrice) {
                alert('Sales Price must be higher than regular price.')
                document.getElementById('regularPrice').value = '';
            }
        }

        document.getElementById('salesPrice').onblur = function () {
